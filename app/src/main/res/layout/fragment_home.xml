<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whiteBg"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_horizontal"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="#3E3E3E" />


        <ImageView
            android:id="@+id/profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/avatarfemale"/>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:elevation="500dp"
            android:padding="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_marginBottom="50px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/baseline_edit_24"
                    app:tint="@color/darkblue" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-15dp"
                    android:text="Jane Doe"
                    android:textColor="@color/darkblue"
                    android:textSize="60px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usernum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02000067318"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="45px"/>

                <TextView
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student | STI College Balayan"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="40px"/>

                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:background="#3E3E3E" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age: 21 yearsold"
                    android:paddingRight="20dp"
                    android:paddingLeft="40dp"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="40px"/>

                <TextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthdate: 21 yearsold"
                    android:paddingRight="20dp"
                    android:paddingLeft="40dp"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="40px"/>

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number: 09151664987"
                    android:paddingRight="20dp"
                    android:paddingLeft="40dp"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="40px"/>

                <TextView
                    android:id="@+id/adddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:paddingLeft="40dp"
                    android:text="Address:Luxemburg, Brgy.Padayon, Balayan, Batangas"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="40px"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>