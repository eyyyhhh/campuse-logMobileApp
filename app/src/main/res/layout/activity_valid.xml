<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".valid">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="80px"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/login_logo"
            android:layout_marginTop="90px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STI College Balayan"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:typeface="sans"/>


        <ImageView
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:src="@drawable/vectors"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/format5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="octover 29 5:04 20200"
            android:layout_marginTop="50dp"
            android:textColor="@color/skyblue"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/format5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this page to the Security Guard. \nThis will serves as an Entrance Pass."
            android:textColor="#575656"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:typeface="sans"/>

    </LinearLayout>

</RelativeLayout>