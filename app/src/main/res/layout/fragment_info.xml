<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:paddingBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_horizontal"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:background="#3E3E3E" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Mission and Vission of STI College Balayan"
                android:textColor="#575656"
                android:textAlignment="center"
                android:textSize="12dp"
                android:typeface="sans"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="and the Frequently Asked Question (FAQ)."
                android:textColor="#575656"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:textSize="12dp"
                android:typeface="sans"/>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:elevation="500dp"
                android:padding="10dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="50px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:paddingLeft="20dp"
                        android:text="Mission"
                        android:textColor="@color/darkblue"
                        android:textSize="60px"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:background="#3E3E3E" />

                    <TextView
                        android:id="@+id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age: 21 yearsold"
                        android:paddingRight="20dp"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/black"
                        android:textSize="40px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:elevation="500dp"
                android:padding="10dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="50px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:paddingLeft="20dp"
                        android:text="Vission"
                        android:textColor="@color/darkblue"
                        android:textSize="60px"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:background="#3E3E3E" />

                    <TextView
                        android:id="@+id/vission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age: 21 yearsold"
                        android:paddingRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="30dp"
                        android:textColor="@color/black"
                        android:textSize="40px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Frequently Asked Questions"
                android:textColor="@color/darkblue"
                android:textSize="60px"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFAQ"
                android:scrollbars="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="85dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>